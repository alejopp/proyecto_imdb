<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_userdata">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/ev_height</item>
        <item name="android:textColor">@color/soft_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:background">@drawable/bt_login_design</item>
    </style>

    <style name="login_subtitles">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height"> @dimen/ev_height </item>
        <item name="android:background">@drawable/shape_box_white</item>
        <item name="android:paddingLeft">@dimen/ev_padding_left</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>

    <style name="login_circle_images">
        <item name="android:layout_width">@dimen/dimen_56dp</item>
        <item name="android:layout_height">@dimen/dimen_56dp</item>
        <item name="civ_border_color">@color/white</item>
        <item name="civ_border_width">@dimen/civ_border_size</item>
        <item name="android:layout_marginBottom">@dimen/civ_login_marginbottom</item>
    </style>

    <style name="horizontal_line_gray_24">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@color/smooth_gray</item>
    </style>

    <style name="vertical_line_yellow_40">
        <item name="android:layout_width">@dimen/dimen_8dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:background">@drawable/view_vertical_line_background</item>
        <item name="android:layout_marginStart">@dimen/dimen_24dp</item>
    </style>

    <style name="user_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">@dimen/dimen_22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_text_descriptions">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_24dp</item>
    </style>

    <style name="detail_category_button">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bt_movie_category_background</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:strokeColor">@color/light_gray</item>
    </style>



</resources>